<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('_header') %> <% if (locals.user) { %>
    <div class="container mt-4 col-md-8">
      <h4 class="mb-4">Add a Student</h4>

      <form class="form-container p-4" action="/student/create" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter student name"
            id="name"
            name="name"
            required
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            placeholder="Enter student email"
            id="email"
            name="email"
            required
          />
        </div>

        <div class="mb-3">
          <label for="college" class="form-label">College</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter student college"
            id="college"
            name="college"
            required
          />
        </div>

        <div class="row g-3">
          <div class="col-md-6">
            <label for="placement-status" class="form-label"
              >Placement Status</label
            >
            <select
              id="placement-status"
              class="form-select"
              required
              name="placementStatus"
            >
              <option value="Not placed">Not placed</option>
              <option value="Placed">Placed</option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="batch" class="form-label">Batch</label>
            <input
              type="text"
              class="form-control"
              id="batch"
              placeholder="Enter batch no."
              name="batch"
              required
            />
          </div>
        </div>

        <div class="row g-3 mt-3">
          <div class="col-md-4">
            <label for="dsa-score" class="form-label">DSA Score</label>
            <input
              type="number"
              class="form-control"
              id="dsa-score"
              name="DSA_marks"
              required
            />
          </div>

          <div class="col-md-4">
            <label for="webdev-score" class="form-label">WebDev Score</label>
            <input
              type="number"
              class="form-control"
              id="webdev-score"
              name="WEB_D_marks"
              required
            />
          </div>

          <div class="col-md-4">
            <label for="react-score" class="form-label">React Score</label>
            <input
              type="number"
              class="form-control"
              id="react-score"
              name="React_marks"
              required
            />
          </div>
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-primary">Add Student</button>
        </div>
      </form>
    </div>
    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
